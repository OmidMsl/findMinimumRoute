<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InputsActivity">

    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/addEndBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="21dp" app:layout_constraintStart_toEndOf="@+id/toggleButton"
            android:layout_marginStart="20dp" app:layout_constraintBottom_toTopOf="@+id/addPathBtn"
            android:layout_marginBottom="4dp" android:textOff="add end point"
            android:textOn="add end point"/>

    <ToggleButton
            android:text="add wall"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/addWallBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="21dp"
            app:layout_constraintEnd_toStartOf="@+id/addPathBtn"
            android:layout_marginEnd="20dp" app:layout_constraintHorizontal_bias="0.305"
            app:layout_constraintTop_toBottomOf="@+id/toggleButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/space" android:textOff="add wall"
            android:textOn="add wall"/>

    <ToggleButton
            android:text="add path"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/addPathBtn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="21dp"
            app:layout_constraintStart_toEndOf="@+id/addWallBtn"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/addEndBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/space" android:textOff="add path" android:textOn="add path"
    />
    <ToggleButton
            android:text="ToggleButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/toggleButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21dp" app:layout_constraintBottom_toTopOf="@+id/addWallBtn"
            android:layout_marginBottom="4dp" app:layout_constraintEnd_toStartOf="@+id/addEndBtn"
            android:layout_marginEnd="20dp"
            android:textOff="add start point"
            android:textOn="add start point"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLey"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/space"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/nextStepBtn">
    </LinearLayout>
    <Space
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:id="@+id/space"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="watch answer"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:id="@+id/nextStepBtn"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="88dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="87dp"/>



</android.support.constraint.ConstraintLayout>